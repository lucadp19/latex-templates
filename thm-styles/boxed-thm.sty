% <* exercisestyle *> %
\declaretheoremstyle[
    spaceabove=\topsep, spacebelow=\topsep,
    headfont=\sffamily\bfseries\@remtitlecolor,
    notefont=\normalfont\sffamily\normalsize\color{Black}, notebraces={(}{)},
    bodyfont=\normalfont\normalsize,
    % qed={$\lrcorner$},
    postheadspace=1em
]{exercisestyle}

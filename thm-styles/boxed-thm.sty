    spaceabove=\topsep, spacebelow=\topsep,
    headfont=\sffamily\bfseries\@remtitlecolor,
    notefont=\normalfont\normalsize\sffamily\color{Black}, notebraces={(}{)},
    bodyfont=\normalfont\normalsize,
    headformat={\NAME \NOTE},
    headpunct={},
    qed={$\lrcorner$},
    postheadspace=10pt
